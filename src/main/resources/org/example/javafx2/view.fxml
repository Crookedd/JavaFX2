<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.javafx2.Controller">
    <center>
        <Canvas fx:id="canvas" width="600" height="500" style="-fx-background-color: lightgray;"/>
