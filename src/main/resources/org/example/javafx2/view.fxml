    <bottom>
        <VBox spacing="10" alignment="center">
            <Button fx:id="drawCircleButton" text="Нарисовать круг"/>
            <Button fx:id="drawRectangleButton" text="Нарисовать прямоугольник"/>
        </VBox>
    </bottom>
</BorderPane>



