<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ColorPicker?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.javafx2.Controller">
    <top>
        <HBox alignment="center" spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
            <ColorPicker fx:id="colorPicker" />
            <Button fx:id="drawCircleButton" text="Нарисовать круг" styleClass="button"/>
            <Button fx:id="drawRectangleButton" text="Нарисовать прямоугольник" styleClass="button"/>
        </HBox>
    </top>
    <center>
        <StackPane>
            <Canvas fx:id="canvas" width="700" height="500" style="-fx-background-color: light gray;"/>
            <VBox style="-fx-padding: 5; -fx-background-color: transparent; -fx-border-color: #A9A9A9; -fx-border-width: 2;">
                <StackPane style="-fx-background-color: white;"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>



