            <Button fx:id="drawRectangleButton" text="Нарисовать прямоугольник"/>
        </HBox>
    </top>
    <center>
        <Canvas fx:id="canvas" width="600" height="400" style="-fx-background-color: lightgray;"/>
    </center>
</BorderPane>



